extends base

block append head

block content
    section.location
        div.form__wrap
            form
                div.form__group
                    label(for='rc') new rc
                    input(type='text' name='name', value=``, id='rc_input')
                select.item(name='name', id='rc', size=`${locations.length}`)
                    //- option(value="rc6") rc6
                    //- option(value="rc7") rc7
                    //- option(value="rc11") rc11 
                    //- option(value="rc14") rc14
                    each value of locations
                        option(value=`${value.name}`, id=`${value._id}`)= value.name
                if userRole === 'admin'
                    section.add__btn
                        a.login__btn--save(id='add__btn_del')
                            svg.login__icon--save
                                use(xlink:href='/img/sprite.svg#icon-trash')
                            span Delete
                        //- a.login__btn--save(id='add__btn_edit')
                        //-     svg.login__icon--save
                        //-         use(xlink:href='/img/sprite.svg#icon-edit')
                        //-     span Edit
                        //- a.login__btn--save(id='add__btn_save')
                        //-     svg.login__icon--save
                        //-         use(xlink:href='/img/sprite.svg#icon-save')
                        //-     span Save
                        a.login__btn--save(id='add__btn_add')
                            svg.login__icon--save
                                use(xlink:href='/img/sprite.svg#icon-plus')
                            span Add new
    section.modal.hidden
        button.close__modal &times;
        h2 Are you sure want to delete ?
        .control_buttons
            button.control__cancel
                svg.login__icon--cancel
                    use(xlink:href='/img/sprite.svg#icon-arrow-long-left')
                span Cancel
            button.control__delete
                svg.actions__save--save
                    use(xlink:href='/img/sprite.svg#icon-trash')
                span Delete
    section.overlay.hidden